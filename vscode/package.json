{
  "name": "qbit-lang",
  "displayName": "Qbit Language Support",
  "description": "Language support for Qbit programming language",
  "version": "0.1.0",
  "publisher": "qbit-lang",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "qbit",
        "aliases": ["Qbit", "qbit"],
        "extensions": [".qb"],
        "configuration": "./configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "qbit",
        "scopeName": "source.qbit",
        "path": "./language.json"
      }
    ],
    "commands": [
      {
        "command": "qbit.helloWorld",
        "title": "Hello World",
        "category": "Qbit"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --allow-missing-repository"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "@vscode/vsce": "^2.22.0"
  }
}