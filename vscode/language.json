{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Qbit",
  "scopeName": "source.qbit",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#variables" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.qbit",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.qbit",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.qbit",
          "match": "\\b(if|else|while|for|return|break|continue)\\b"
        },
        {
          "name": "keyword.declaration.qbit",
          "match": "\\b(let|const|fn|import|export)\\b"
        },
        {
          "name": "constant.language.qbit",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.qbit",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.qbit",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.qbit",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.qbit",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.qbit",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "entity.name.function.definition.qbit",
          "begin": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "beginCaptures": {
            "1": { "name": "keyword.declaration.qbit" },
            "2": { "name": "entity.name.function.qbit" }
          },
          "end": "(?=\\()"
        }
      ]
    },
    "variables": {
      "name": "variable.other.qbit",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.qbit",
          "match": "\\+|\\-|\\*|/|%|\\*\\*|\\^"
        },
        {
          "name": "keyword.operator.comparison.qbit",
          "match": "==|!=|<|<=|>|>="
        },
        {
          "name": "keyword.operator.logical.qbit",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.bitwise.qbit",
          "match": "&|\\||<<|>>"
        },
        {
          "name": "keyword.operator.assignment.qbit",
          "match": "=|\\+=|\\-=|\\*=|/=|%=|\\^=|&=|\\|=|<<=|>>="
        }
      ]
    }
  }
}